{
  "name": "step8up-week4-todo-list",
  "version": "0.1.0",
  "description": "This is week4 web development project, created as part of the Step8Up bootcamp!",
  "private": "true",
  "type": "module",
  "scripts": {
    "tailwind_build": "npx tailwindcss -i ./src/assets/css/style.css -o ./dist/output.css --watch",
    "prebuild": "npm run validate && rimraf ./public",
    "build": "parcel build src/index.html --dist-dir ./public --public-url /step8up-week4-todo-list/",
    "start": "parcel src/index.html",
    "validate": "npx stylelint src/assets/**/*.css; npx html-validate src/**/*.html"
  },
  "keywords": [
    "Simple website",
    "HTML form"
  ],
  "author": "Kamil Wozniak <kamil.m.wozniak+git@gmail.com",
  "license": "GPLv3",
  "devDependencies": {
    "auto-prefixer": "^0.4.2",
    "html-validator": "^5.1.18",
    "parcel": "^2.15.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "tailwindcss": "^3.4.17"
  }
}
